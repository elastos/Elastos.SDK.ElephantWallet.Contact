<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/btn_test_newcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NewContact"/>
            <Button android:id="@+id/btn_test_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"/>
            <Button android:id="@+id/btn_test_delcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DelContact"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/btn_show_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserInfo"/>
            <Button android:id="@+id/btn_list_friendinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FriendInfo"/>
            <Button android:id="@+id/btn_scan_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/btn_test_syncupload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SyncUpload"/>
            <Button android:id="@+id/btn_test_syncdownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SyncDownload"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scrollbars="vertical" />
    <TextView android:id="@+id/txt_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
